@model List<Blogy.EntityLayer.Concrete.Article>

@{
    ViewData["Title"] = "MyBlogList";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}
<div class="main-panel">
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Blogs</h3>
        <h1>@ViewBag.id</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Blogs</a></li>
                <li class="breadcrumb-item active" aria-current="page"> Authors Blogs </li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog List</h4>
                    <p class="card-description">
                        You Can Reach Your Blog List Below the Table <code>.table</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Blog Header</th>
                                    <th>Date</th>
                                    <th>Category</th>
                                    <th>Update</th>
                                    <th>Delete</th>
                                    <th>Blog Comments</th>
                                
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ArticleId</td>
                                            <td>@item.Title</td>
                                            <td>@item.CreatedDate</td>
                                            <td>@item.CategoryId</td>
                                            <td><a href="#" class="btn btn-danger">Delete</a></td>
                                            <td><a href="#" class="btn btn-success">Update</a></td>
                                            <td><a href="#" class="btn btn-warning">Comments</a></td>
                                            
                                            
                                        </tr>
                                    }
                                
                             
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</div>


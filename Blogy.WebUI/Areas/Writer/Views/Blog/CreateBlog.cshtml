@model Blogy.EntityLayer.Concrete.Article
@{
    ViewData ["Title"] = "CreateBlog";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">New Blog Page</h3>
            <h1>@ViewBag.id</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Blog operations</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> New Blogs </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">New Blog Page</h4>
                        <p class="card-description">
                            You cann add new Blog Below the Table
                        </p>
                        <form method="post">
                            <label>Blog Header</label>
                            <input type="text" asp-for="Title" class="form-control" />   
                            <br />
                            <label>Blog Category</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                            <br />
                            <label>Blog Kapak Fotoğraf Yolu</label>
                            <input type="text" asp-for="CoverImageUrl" class="form-control" />
                            <br />
                            <label>Blog Detayları</label>
                            <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                            <br />
                            <button class="btn btn-info">Blogu Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


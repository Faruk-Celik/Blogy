@model List<Blogy.EntityLayer.Concrete.Category>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Delete</th>
            <th>Update</th>
            <th>Blog List By Category</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Delete</a></td>
                <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Update</a></td>
                <td><a href="/Category/BlogListByCategory/@item.CategoryId" class="btn btn-outline-dark">Blog List By Category</a></td>
            </tr>
        }
    </table>
    <a href="/Category/CreateCategory/" class="btn btn-outline-primary">Add new Category</a>
</div>
